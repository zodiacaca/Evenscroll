{
  "manifest_version": 2,
  "name": "Evenscroll",
  "version": "0.1",

  "description": "Scroll evenly.",

  "icons": {
    "48": "icons/icon.png"
  },

  "commands": {
    "double-refresh": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Refresh addon and page"
    }
  },

  "background": { "scripts": ["/js/bg.js"] },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "/js/utils.js",
        "/js/main.js"
      ],
      "css": ["/css/style.css"]
    }
  ]
}
