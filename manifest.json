{
  "manifest_version": 2,
  "name": "Evenscroll",
  "version": "0.1",

  "description": "Scroll evenly.",

  "icons": {
    "48": "icons/icon.svg"
  },

  "commands": {
    "double-refresh": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Refresh addon and page"
    }
  },

  "background": { "scripts": ["/js/bg.js"] },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "/js/utils.js",
        "/js/main.js",
        "/js/extra.js"
      ],
      "css": ["/css/style.css"]
    }
  ],

  "options_ui": {
    "page": "options.html"
  },

  "permissions": ["storage"],

  "browser_action": {
    "browser_style": true,
    "default_title": "Evenscroll",
    "default_icon": "icons/icon.svg",
    "default_popup": "html/popup.html"
  }
}
